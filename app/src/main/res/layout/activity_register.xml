<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/backgroundColor"
    tools:context="latenighthack.ddpartyorganizer.RegisterActivity">

    <EditText
        android:hint="verify password"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/passwordRegInputID"
        android:layout_alignRight="@+id/passwordRegInputID"
        android:layout_alignEnd="@+id/passwordRegInputID"
        android:layout_marginTop="53dp"
        android:id="@+id/verifyPasswordRegID" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:id="@+id/registerButtonID"
        android:layout_below="@+id/verifyPasswordRegID"
        android:layout_centerHorizontal="true" />

    <EditText
        android:hint="email"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="121dp"
        android:id="@+id/emailRegInputID"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Display Name"
        android:gravity="center"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/emailRegInputID"
        android:layout_alignStart="@+id/emailRegInputID"
        android:layout_marginTop="33dp"
        android:id="@+id/displayNameInput" />

    <EditText
        android:hint="password"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordRegInputID"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/emailRegInputID"
        android:layout_alignLeft="@+id/emailRegInputID"
        android:layout_alignStart="@+id/emailRegInputID" />
</RelativeLayout>
