<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.athon.hack.ddcompanion.Character_More_Fragment"
    android:weightSum="1"
    android:background="@color/backgroundColor"
    tools:layout_margin="20dp">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/IdealsID"
        android:layout_weight="0.17"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Ideals"
        tools:layout_margin="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/PersonalityTraitsID"
        android:hint="Personality Traits"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/BondsID"
        android:layout_weight="0.17"
        android:hint="Bonds"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        tools:layout_margin="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/FlawsID"
        android:layout_weight="0.17"
        android:textAlignment="center"
        android:hint="Flaws"
        android:layout_margin="20dp"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lvlId"
        android:layout_weight="0.17"
        android:textAlignment="center"
        android:hint="Flaws"
        android:layout_margin="20dp"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:text="OK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OkButtonID"
        tools:layout_width="match_parent" />

</LinearLayout>
